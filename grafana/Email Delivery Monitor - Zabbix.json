{
  "__inputs": [
    {
      "name": "DS_ZABBIX",
      "label": "Zabbix",
      "description": "Zabbix data source",
      "type": "datasource",
      "pluginId": "alexanderzobnin-zabbix-datasource",
      "pluginName": "Zabbix"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "9.5.0" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "9.5.0" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "9.5.0" },
    { "type": "datasource", "id": "alexanderzobnin-zabbix-datasource", "name": "Zabbix", "version": "4.4.4" }
  ],
  "title": "Email Delivery Monitor (Zabbix)",
  "tags": ["email", "zabbix", "delivery"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "ZABBIX",
        "label": "Zabbix datasource",
        "query": "alexanderzobnin-zabbix-datasource",
        "current": { "selected": true }
      },
      {
        "type": "query",
        "name": "group",
        "label": "Host group",
        "includeAll": true,
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "datasource": { "type": "alexanderzobnin-zabbix-datasource", "uid": "${ZABBIX}" },
        "query": { "queryType": "group" },
        "refresh": 1
      },
      {
        "type": "query",
        "name": "host",
        "label": "Host",
        "datasource": { "type": "alexanderzobnin-zabbix-datasource", "uid": "${ZABBIX}" },
        "query": { "queryType": "host", "group": "/.*/" },
        "refresh": 1
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Email Delivery Time (s)",
      "gridPos": { "x": 0, "y": 0, "w": 18, "h": 10 },
      "datasource": { "type": "alexanderzobnin-zabbix-datasource", "uid": "${ZABBIX}" },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 30 },
              { "color": "red", "value": 60 }
            ]
          }
        }
      },
      "targets": [
        {
          "refId": "A",
          "queryType": "item",
          "group": "$group",
          "host": "$host",
          "application": "",
          "item": "Email Delivery Time",
          "options": { "resultFormat": "time_series", "showDisabledItems": false }
        }
      ]
    },
    {
      "type": "stat",
      "title": "Latest Delivery Time",
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 5 },
      "datasource": { "type": "alexanderzobnin-zabbix-datasource", "uid": "${ZABBIX}" },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 30 },
              { "color": "red", "value": 60 }
            ]
          }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false } },
      "targets": [
        {
          "refId": "A",
          "queryType": "item",
          "group": "$group",
          "host": "$host",
          "application": "",
          "item": "Email Delivery Time",
          "options": { "resultFormat": "time_series", "showDisabledItems": false }
        }
      ]
    },
    {
      "type": "stat",
      "title": "Delivery Success (1/0)",
      "gridPos": { "x": 18, "y": 5, "w": 6, "h": 5 },
      "datasource": { "type": "alexanderzobnin-zabbix-datasource", "uid": "${ZABBIX}" },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "mappings": [
            { "type": "value", "options": { "0": { "text": "Failed" }, "1": { "text": "Success" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [ { "color": "red", "value": null }, { "color": "green", "value": 1 } ]
          }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false } },
      "targets": [
        {
          "refId": "A",
          "queryType": "item",
          "group": "$group",
          "host": "$host",
          "application": "",
          "item": "Email Delivery Success",
          "options": { "resultFormat": "time_series", "showDisabledItems": false }
        }
      ]
    }
  ]
}
