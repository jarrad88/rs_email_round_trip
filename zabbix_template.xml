<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>6.0</version>
    <date>2025-09-13T12:00:00Z</date>
    <groups>
        <group>
            <uuid>12345678-1234-1234-1234-123456789abc</uuid>
            <name>Email Monitoring</name>
        </group>
    </groups>
    <templates>
        <template>
            <uuid>87654321-4321-4321-4321-cba987654321</uuid>
            <template>Email Delivery Monitor</template>
            <name>Email Delivery Monitor</name>
            <groups>
                <group>
                    <name>Email Monitoring</name>
                </group>
            </groups>
            <items>
                <item>
                    <uuid>11111111-1111-1111-1111-111111111111</uuid>
                    <name>Email Delivery Success Rate</name>
                    <type>ZABBIX_PASSIVE</type>
                    <key>email.delivery.success</key>
                    <history>7d</history>
                    <trends>90d</trends>
                    <value_type>UNSIGNED</value_type>
                    <description>Email delivery success flag (1=success, 0=failure)</description>
                    <preprocessing>
                        <step>
                            <type>MULTIPLIER</type>
                            <parameters>
                                <parameter>1</parameter>
                            </parameters>
                        </step>
                    </preprocessing>
                    <tags>
                        <tag>
                            <tag>component</tag>
                            <value>email</value>
                        </tag>
                    </tags>
                </item>
                <item>
                    <uuid>22222222-2222-2222-2222-222222222222</uuid>
                    <name>Email Delivery Time</name>
                    <type>ZABBIX_PASSIVE</type>
                    <key>email.delivery.time</key>
                    <history>7d</history>
                    <trends>90d</trends>
                    <value_type>FLOAT</value_type>
                    <units>s</units>
                    <description>Email delivery time in seconds</description>
                    <preprocessing>
                        <step>
                            <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                            <parameters>
                                <parameter>300</parameter>
                            </parameters>
                        </step>
                    </preprocessing>
                    <tags>
                        <tag>
                            <tag>component</tag>
                            <value>email</value>
                        </tag>
                    </tags>
                </item>
            </items>
            <triggers>
                <trigger>
                    <uuid>33333333-3333-3333-3333-333333333333</uuid>
                    <expression>last(/Email Delivery Monitor/email.delivery.time)&gt;30</expression>
                    <name>Email delivery time is high on {HOST.NAME}</name>
                    <priority>WARNING</priority>
                    <description>Email delivery time exceeds 30 seconds</description>
                    <tags>
                        <tag>
                            <tag>scope</tag>
                            <value>performance</value>
                        </tag>
                    </tags>
                </trigger>
                <trigger>
                    <uuid>44444444-4444-4444-4444-444444444444</uuid>
                    <expression>last(/Email Delivery Monitor/email.delivery.time)&gt;60</expression>
                    <name>Email delivery time is very high on {HOST.NAME}</name>
                    <priority>HIGH</priority>
                    <description>Email delivery time exceeds 60 seconds</description>
                    <tags>
                        <tag>
                            <tag>scope</tag>
                            <value>performance</value>
                        </tag>
                    </tags>
                </trigger>
                <trigger>
                    <uuid>55555555-5555-5555-5555-555555555555</uuid>
                    <expression>last(/Email Delivery Monitor/email.delivery.success)=0</expression>
                    <name>Email delivery failed on {HOST.NAME}</name>
                    <priority>HIGH</priority>
                    <description>Email delivery test failed</description>
                    <tags>
                        <tag>
                            <tag>scope</tag>
                            <value>availability</value>
                        </tag>
                    </tags>
                </trigger>
                <trigger>
                    <uuid>66666666-6666-6666-6666-666666666666</uuid>
                    <expression>nodata(/Email Delivery Monitor/email.delivery.time,300)=1</expression>
                    <name>No email delivery data received on {HOST.NAME}</name>
                    <priority>WARNING</priority>
                    <description>No email delivery monitoring data received for 5 minutes</description>
                    <tags>
                        <tag>
                            <tag>scope</tag>
                            <value>availability</value>
                        </tag>
                    </tags>
                </trigger>
            </triggers>
        </template>
    </templates>
</zabbix_export>
